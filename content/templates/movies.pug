extends index

block append pageVariables
    - var pageTitle = "Movies"

block maincontent
    each item in contentData.movies.records
        .cover
            if item.fields.name
                .cover-image
                    +image(item)
                .cover-info
                    h3.cover-heading
                        | #{item.fields.name} 
                    p.meta
                        | #{moment(item.fields.releaseDate).format("MMMM Do")} 
                    //div
                    //    p Description (IMDB)
                    //    | #{item.fields.description}
                    div!= marked(item.fields.review)
