include ../../../core/templates/mixins/icon

block pageVariables
    // Use this block to append page variables in templates
    - var projectTitle = "Best of 2017"

doctype html
html(lang='en' class=htmlClass ? htmlClass : '')
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        title
            if pageTitle
                | #{pageTitle} - #{projectTitle}
            else
                | #{projectTitle}

        link(rel='stylesheet', href='css/main.css')

    body(class=bodyClass ? bodyClass : '')

        block body

