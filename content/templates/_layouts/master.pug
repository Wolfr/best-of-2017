include ../../../core/templates/mixins/icon

block pageVariables
    // Use this block to append page variables in templates
    - var projectTitle = "Best of 2017"

doctype html
html(lang='en' class=htmlClass ? htmlClass : '')
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="robots", content="noindex")

        title
            if pageTitle
                | #{pageTitle} - #{projectTitle}
            else
                | #{projectTitle}

        link(rel='stylesheet', href='/css/main.css')
        link(rel='stylesheet', href='/css/prototype.css')
        link(rel='stylesheet', href='/css/styleguide.css')

        script(src="/resources/jquery.js")

    body(class=bodyClass ? bodyClass : '')

        block body

        //include ../../../core/templates/includes/prototype-nav

        script(src="https://unpkg.com/tilt.js@1.1.21/dest/tilt.jquery.min.js")
        script.
            $(function() {
              var tilt = $('.js-tilt').tilt({
                  glare: true,
                  maxGlare: .3,
                  scale: 1,
                  perspective: 1500
              });
            });

